<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard</title>
    <link rel="stylesheet" href="/activity.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body>
    <nav class="navbar">
        <div class="nav-container">
            <a href="/dashboard" class="nav-back">‚Üê Back</a>
            <div class="nav-brand">User Activity</div>
            <!-- <div class="nav-links">
                <a href="#" class="nav-link">About</a>
                <a href="#" class="nav-link">Contact</a>
            </div> -->
        </div>
    </nav>

    <div class="main-container">
        <div class="content-wrapper">
            <div class="chart-container">
                <h2 class="section-title">Activity Progress</h2>
                <div class="chart-wrapper">
                    <canvas id="progressChart"></canvas>
                </div>
            </div>

            <div class="advice-container">
                <h2 class="section-title">Personalized Advice</h2>
                <div class="advice-card">
                    <p class="advice-text">Based on your recent activity, we recommend increasing your daily practice
                        time by 20% to reach your goals faster. Consistency is key to success!</p>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Line chart configuration
        const ctx = document.getElementById('progressChart').getContext('2d');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                datasets: [{
                    label: 'User Points',
                    data: [65, 59, 80, 81, 56, 55],
                    borderColor: '#4a90e2',
                    tension: 0.4,
                    fill: false,
                    borderWidth: 3
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    title: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: '#f0f0f0'
                        }
                    },
                    x: {
                        grid: {
                            color: '#f0f0f0'
                        }
                    }
                }
            }
        });
    </script>
</body>

</html>